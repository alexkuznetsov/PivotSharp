@using PivotSharp.Web.Controllers
@model IDictionary<int, PivotSharp.PivotConfig>

<div class="row">
	@foreach (var kvp in Model) {

		<div class="col-md-4">

			<div class="panel panel-primary" style="height:250px;">
				<div class="panel-heading">
					<h3 class="panel-title">@kvp.Key</h3>
				</div>
				<div class="panel-body">
					<p>@string.Join(", ", kvp.Value.Filters.Select(f => f.Description))</p>
					@Html.Partial("_PivotConfig", new PivotConfigViewModel { Id = kvp.Key, Config = kvp.Value })
					<a class="btn btn-raised btn-info pull-right" style="margin-top:0; margin-bottom: 0;" href="@Url.Action("View", new { Id = kvp.Key})">View</a>
				</div>
			</div>
		</div>
	}
</div>